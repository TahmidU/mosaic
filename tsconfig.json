{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["jest", "@types/testing-library__jest-dom"]
  },
  "typeAcquisition": { "include": ["jest"] },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/organisms/Navbar/Navbar.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "__mocks__",
    "/email-server",
    "cypress.config.ts"
  ]
}
